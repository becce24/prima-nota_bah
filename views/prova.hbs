<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Prima Nota</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-100">
    <!-- Navbar Mobile-First -->
    <nav class="bg-blue-600 text-white">
        <!-- Mobile Burger Menu -->
        <div class="lg:hidden">
            <div class="flex items-center justify-between p-4">
                <h1 class="text-xl font-bold">Gestione Prima Nota</h1>
                <button id="menuButton" class="text-white focus:outline-none">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </div>
            <!-- Menu Mobile (nascosto di default) -->
            <div id="mobileMenu" class="hidden px-4 pb-4">
                <a href="/home" class="block py-2 px-4 text-white hover:bg-blue-700 rounded">
                    <i class="fas fa-home mr-2"></i>Home
                </a>
                <a href="/transactions" class="block py-2 px-4 text-white hover:bg-blue-700 rounded">
                    <i class="fas fa-list mr-2"></i>Gestione
                </a>
            </div>
        </div>
        
        <!-- Desktop Menu -->
        <div class="hidden lg:block">
            <div class="container mx-auto px-6 py-4 flex justify-between items-center">
                <h1 class="text-2xl font-bold">Gestione Prima Nota</h1>
                <div class="flex space-x-4">
                    <a href="/home" class="text-white px-4 py-2 hover:bg-blue-700 rounded">
                        <i class="fas fa-home mr-2"></i>Home
                    </a>
                    <a href="/transactions" class="text-white px-4 py-2 hover:bg-blue-700 rounded">
                        <i class="fas fa-list mr-2"></i>Gestione
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Contenuto Principale -->
    <div class="container mx-auto p-4">
        <!-- Form Transazione -->
        <div class="bg-white p-4 lg:p-6 rounded-lg shadow-md mb-6">
            <h3 class="text-xl font-semibold mb-4">Aggiungi Transazione</h3>
            
            <form action="/transactions/add" method="POST" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Checkbox -->
                    <div class="flex space-x-4 col-span-full">
                        <label class="inline-flex items-center">
                            <input type="checkbox" name="typeClient" id="typeClient" class="form-checkbox h-5 w-5">
                            <span class="ml-2">Cliente</span>
                        </label>
                        <label class="inline-flex items-center">
                            <input type="checkbox" name="typeSupplier" id="typeSupplier" class="form-checkbox h-5 w-5">
                            <span class="ml-2">Fornitore</span>
                        </label>
                    </div>

                    <!-- Input Fields - si adattano automaticamente -->
                    <div class="col-span-full" id="entityContainer">
                        <div id="clientSection" class="hidden mb-4">
                            <input type="text" id="client" name="client" list="clientSuggestions" 
                                   class="w-full p-2 border rounded" placeholder="Cerca cliente...">
                            <datalist id="clientSuggestions"></datalist>
                        </div>
                        <div id="supplierSection" class="hidden mb-4">
                            <input type="text" id="supplier" name="supplier" list="supplierSuggestions" 
                                   class="w-full p-2 border rounded" placeholder="Cerca fornitore...">
                            <datalist id="supplierSuggestions"></datalist>
                        </div>
                    </div>

                    <input type="date" name="date" required class="w-full p-2 border rounded">
                    <input type="text" name="documentNumber" placeholder="Numero Documento" 
                           required class="w-full p-2 border rounded">
                    <input type="text" name="amount" placeholder="Importo (es. 1.000,50)" 
                           required class="w-full p-2 border rounded">
                    <select name="bank" required class="w-full p-2 border rounded bg-white">
                        <option value="">Seleziona Banca</option>
                        <option value="Banca Veneta (Patavina)">Banca Veneta (Patavina)</option>
                        <option value="Bcc Centro Marca">Bcc Centro Marca</option>
                        <option value="Bcc di Roma">Bcc di Roma</option>
                        <option value="Bcc Colli">Bcc Colli</option>
                        <option value="Cassa">Cassa</option>
                    </select>

                    <textarea name="description" placeholder="Descrizione" 
                              class="w-full p-2 border rounded col-span-full"></textarea>
                </div>

                <div class="mt-4">
                    <button type="submit" class="w-full md:w-auto bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">
                        Salva
                    </button>
                </div>
            </form>
        </div>

        <!-- Lista Transazioni -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-4 border-b border-gray-200">
                <h3 class="text-xl font-semibold">Lista delle Transazioni</h3>
            </div>
            
            <!-- Mobile View -->
            <div class="block lg:hidden">
                {{#each transactions}}
                <div class="p-4 border-b border-gray-200">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-sm">{{formatDate this.date 'DD/MM/YYYY'}}</span>
                        <span class="text-sm font-medium {{#if (eq this.type 'incasso')}}text-green-600{{else}}text-red-600{{/if}}">
                            {{formatCurrency this.amount}}
                        </span>
                    </div>
                    <div class="text-sm text-gray-600">
                        {{#if (eq this.type 'incasso')}}{{this.client}}{{else}}{{this.supplier}}{{/if}}
                    </div>
                </div>
                {{/each}}
            </div>

            <!-- Desktop View -->
            <div class="hidden lg:block">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Data</th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Importo</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente/Fornitore</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {{#each transactions}}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">{{formatDate this.date 'DD/MM/YYYY'}}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-right {{#if (eq this.type 'incasso')}}text-green-600{{else}}text-red-600{{/if}} font-medium">
                                    {{formatCurrency this.amount}}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    {{#if (eq this.type 'incasso')}}{{this.client}}{{else}}{{this.supplier}}{{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Script per il menu mobile -->
    <script>
        document.getElementById('menuButton').addEventListener('click', function() {
            document.getElementById('mobileMenu').classList.toggle('hidden');
        });
    </script>

    {{#if scriptName}}
        <script src="/js/{{scriptName}}.js"></script>
    {{/if}}
</body>
</html>